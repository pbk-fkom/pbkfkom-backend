<div class="page-heading">
    <section class="section">
        <div class="card">
            <div class="card-header">
                <a href="/posts/create" class="btn btn-primary">Tambah +</a>
            </div>
            <div class="card-body">
                <% if(alert.message != "") { %>
                    <div class="alert alert-<%= alert.status %>" role="alert">
                      <%= alert.message %>
                    </div>
                    <% } %>
                <div class="table-responsive">
                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Thumbnail</th>
                                <th>Judul</th>
                                <th>Konten</th>
                                <th>Status</th>
                                <th>Kategori</th>
                                <th>Tag</th>
                                <th>Penulis</th>
                                <th>Ditambahkan Oleh</th>
                                <th>Dibuat</th>
                                <th>Diedit</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% posts.forEach((post, index) => { %>
                               <tr>
                                    <td><%= index + 1 %></td>
                                    <td><img src="thumbnails/<%= post.thumbnail %>"
                                        alt="<%= post.thumbnail %>" class="img-fluid" width="50"></td>
                                    <td><%= post.title %></td>
                                    <td><%- post.content %></td>
                                    <td>
                                        <% if (post.status == 'publish'){ %>
                                            <div class="badge bg-success"><%= post.status %></div>
                                        <% } else { %>
                                            <div class="badge bg-danger"><%= post.status %></div>
                                        <% } %>
                                    </td>
                                    <td><%= post.categoryId.name %></td>
                                    <td>
                                        <% post.tagId.forEach((tag, index) => { %>
                                            <div class="badge bg-primary"><%= tag.name %></div>
                                        <% }) %>
                                    </td>
                                    <td><%= post.writer %></td>
                                    <td><%= post.userId.name %></td>
                                    <td><%= post.createdAt %></td>
                                    <td><%= post.updatedAt %></td>
                                    <td>
                                        <a href="/posts/<%= post.id %>/edit"
                                            class="btn btn-warning text-white"><i class="bi bi-pencil-fill"></i></a>
                                        <button class="btn btn-danger delete-confirm" data-action="/posts/<%= post.id %>?_method=DELETE"><i class="bi bi-trash3-fill"></i></button>
                                    </td>
                               </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>